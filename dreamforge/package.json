{
  "name": "dreamforge",
  "version": "1.0.0",
  "description": "DreamForge - AI-powered creation platform for all ages",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "setup": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ..",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

